@{
    ViewData["Title"] = "Imprimir Treino";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ImprimirTreino" method="post"
      style="width: 40%; margin: 0 auto; display: flex; flex-direction: column; align-items: center; text-align: center;">
    <div class="form-group" style="width: 50%;">
        <label for="alunoId" style="color: red; font-size: 1.5em;">Digite seu ID de Aluno:</label>
        <input type="number" class="form-control" id="alunoId" name="id" required autocomplete="off" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Iniciar Exercicios</button>
</form>

<form asp-action="EncerrarLogin" method="post"
      style="width: 40%; margin: 0 auto; display: flex; flex-direction: column; align-items: center; text-align: center;">
    <div class="form-group" style="width: 50%;">
        <button type="submit" class="btn btn-danger" style="margin-top: 5px;">Encerrar Seção</button>
    </div>
</form>

<img src="~/imagens/Captura de tela 2025-03-27 110132.png" alt="VV Gym Logo" style="align-items: center; justify-content: center; display: flex; width: 20%; margin: 0 auto;" />

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["Erro"]
    </div>
}
