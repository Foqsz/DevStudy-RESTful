    @model DevStudy.FrontEnd.DevStudyFrontEnd.Core.Models.TreinoExercicioViewModel

@{
    ViewData["Title"] = "Delete Treino Exercicio";
}

<form asp-action="DeleteTreinoExercicio" method="post" class="form-horizontal">
    @Html.AntiForgeryToken() <!-- Token anti-forgery para proteção -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <p>Tem certeza de que deseja excluir o Treino Exercicio <strong>@Model.Exercicio.Nome (ID: @Model.Id)</strong>?</p>
    </div>

    <div class="form-group">
        <p>Confira as informações do Treino Exercicio <strong>@Model.Exercicio.Nome</strong>:</p>
    </div>

    <!-- Exibir os dados sem permitir edição (usar campo hidden para enviar os dados corretamente) -->
    <div class="form-group">
        <label for="ID Do Treino">TreinoId</label>
        <input type="hidden" asp-for="TreinoId" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.TreinoId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="ID Do Exercicio @Model.Exercicio.Nome">ExercicioId</label> 
        <input type="hidden" asp-for="ExercicioId" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.ExercicioId" class="form-control" readonly />
    </div> 

    <div class="form-group">
        <label for="Repeticoes">Repeticoes</label>
        <input type="hidden" asp-for="Repeticoes" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.Repeticoes" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="Series">Series</label>
        <input type="hidden" asp-for="Series" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.Series" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Retornar</a>
        </div>
    </div>
</form>