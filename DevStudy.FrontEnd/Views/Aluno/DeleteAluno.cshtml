@model DevStudy.FrontEnd.DevStudyFrontEnd.Core.Models.AlunoViewModel

@{
    ViewData["Title"] = "Delete Aluno";
}

<form asp-action="DeleteAluno" method="post" class="form-horizontal">
    @Html.AntiForgeryToken() <!-- Token anti-forgery para proteção --> 
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <p>Tem certeza de que deseja excluir o Aluno <strong>@Model.Nome</strong>?</p>
    </div>

    <div class="form-group">
        <p>Confira as informações do Aluno <strong>@Model.Nome</strong>:</p>
    </div>

    <!-- Exibir os dados sem permitir edição (usar campo hidden para enviar os dados corretamente) -->
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="hidden" asp-for="Nome" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.Nome" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="hidden" asp-for="Email" /> <!-- Usar campo hidden para garantir que o valor seja enviado -->
        <input type="text" value="@Model.Email" class="form-control" readonly />
    </div>  

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Retornar</a>
        </div>
    </div>
</form>