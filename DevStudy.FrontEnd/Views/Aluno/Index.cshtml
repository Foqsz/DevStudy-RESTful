@{
}
@model IEnumerable<DevStudy.FrontEnd.DevStudyFrontEnd.Core.Models.AlunoViewModel>

@{
    ViewData["Title"] = "Alunos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Aluno" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Plano)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Instrutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treinos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Plano)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Instrutor)
                </td>
                <td>
                    <td>
                        @foreach (var treino in item.Treinos)
                        {
                            <div>
                                <p>@treino.Id - @string.Join(", ", treino.Exercicios.Select(e => $"{e.Nome}, {e.Tipo}, {e.Descricao}, Duração: {e.DuraçãoMinutos}"))</p>
                            </div>
                        }
                    </td>
                    @Html.DisplayFor(modelItem => item.Treinos)
                </td>
                <td>
                    <a asp-controller="Aluno" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Aluno" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Aluno" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
