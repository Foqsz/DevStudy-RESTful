@model DevStudy.FrontEnd.DevStudyFrontEnd.Core.Models.PlanoViewModel

@{
    ViewData["Title"] = "Atualizar Plano";
}

<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <p>Abaixo todas as informações editáveis do Plano <strong>@Model.Nome</strong>, de id <strong>@Model.Id</strong>.</p>
</div>

<form asp-action="UpdatePlano" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome">Nome do Plano</label>
        <input type="text" class="form-control" asp-for="Nome" />
    </div>
    <div class="form-group">
        <label asp-for="Preco">Preco do Plano</label>
        <input type="Preco" class="form-control" asp-for="Preco" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descricao Do Plano</label>
        <input type="text" class="form-control" asp-for="Descricao" />
    </div>
    <div class="form-group">
        <label asp-for="DataInicio">Data de Inicio do Plano</label>
        <input type="text" class="form-control" asp-for="DataInicio" />
    </div>

    <div class="form-group">
        <label asp-for="DataFim">Data Final do Plano</label>
        <input type="text" class="form-control" asp-for="DataFim" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
    <a asp-action="Index" class="btn btn-info">Retornar</a>
</form>

<!-- Exibir mensagens de erro do ModelState -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <strong>Erro!</strong> Por favor, corrija os erros abaixo.
    </div>
}
