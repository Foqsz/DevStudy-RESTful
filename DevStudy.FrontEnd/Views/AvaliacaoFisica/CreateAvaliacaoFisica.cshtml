@model DevStudy.FrontEnd.DevStudyFrontEnd.Core.Models.AvaliacaoFisicaViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Avaliação Física</h4>

<form asp-action="CreateAvaliacaoFisica" method="post" class="form-horizontal">
    @Html.AntiForgeryToken() <!-- Token anti-forgery para proteção -->

    <div class="form-group">
        <label asp-for="AlunoId" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="AlunoId" class="form-control" />
            <span asp-validation-for="AlunoId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Peso" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Peso" class="form-control" />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Altura" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Altura" type="number" class="form-control" step="0.01" lang="en" inputmode="decimal" />
            <span asp-validation-for="Altura" class="text-danger"></span>
        </div>
    </div> 

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

